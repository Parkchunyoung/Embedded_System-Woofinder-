<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.place.woofinder.ControlActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="177dp"
            android:layout_height="38dp"
            android:text="LED"
            android:id="@+id/LED_text"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark"
            android:textSize="40sp" />

        <Switch
            android:layout_width="166dp"
            android:layout_height="62dp"
            android:text="ON/OFF"
            android:id="@+id/LED_switch"
            android:layout_row="0"
            android:layout_column="1"
            android:checked="false"
            android:textOn="ON"
            android:textOff="OFF"
            android:textSize="30sp"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="172dp"
            android:layout_height="69dp"
            android:text="Sound"
            android:id="@+id/sound_text"
            android:layout_row="1"
            android:layout_column="0"
            android:textSize="40dp"
            android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/button"
            android:layout_row="1"
            android:layout_column="3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:text="please, write message."
            android:id="@+id/textView"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="4"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="4" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:text="send"
            android:id="@+id/send_btn"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_gravity="top|right" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:text="New Text"
            android:id="@+id/tmp_console"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="4" />

    </GridLayout>
</RelativeLayout>
